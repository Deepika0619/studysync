<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard – StudySync</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <!-- Slide Sidebar -->
  <nav id="sideNav" class="side-nav">
    <div class="side-header">
      Hello, <%= user.name %>
    </div>
    <a href="#/actions" onclick="showTasks()">My Tasks</a>
    <a href="#/accounts" onclick="showAccount()">Account</a>
    <a href="/logout">Logout</a>
  </nav>

  <div class="page-wrapper">
    <!-- Left Panel -->
    <div class="left-panel">
      <button class="nav-toggle" onclick="toggleNav()">☰</button>
      <div class="left-panel-content">
        <h2>Welcome Back, <%= user.name %>!</h2>
        <p>Small steps every day lead to big success.</p>
      </div>
    </div>

    <!-- Right Panel -->
    <div class="right-panel" id="mainContent">
      <h2>Add New Task</h2>

      <% if (success && success.length > 0) { %>
        <p class="flash success"><%= success %></p>
      <% } %>
      <% if (error && error.length > 0) { %>
        <p class="flash error"><%= error %></p>
      <% } %>

      <form method="POST" action="/tasks">
        <label for="title">New Task</label>
        <input type="text" id="title" name="title" placeholder="Add new task" required>
        <button type="submit">➕ Add Task</button>
      </form>
    </div>
  </div>

  <!-- JavaScript -->
  <script>
    function toggleNav() {
      const nav = document.getElementById('sideNav');
      nav.classList.toggle('visible');
    }

    function showTasks() {
      fetch('/mytasks')
        .then(res => res.text())
        .then(html => {
          document.getElementById('mainContent').innerHTML = html;
          document.getElementById('sideNav').classList.remove('visible');
        });
    }

    function showAccount() {
      fetch('/account')
        .then(res => res.text())
        .then(html => {
          document.getElementById('mainContent').innerHTML = html;
          document.getElementById('sideNav').classList.remove('visible');
        });
    }

    document.addEventListener('click', function (e) {
      const nav = document.getElementById('sideNav');
      const toggle = document.querySelector('.nav-toggle');
      if (!nav.contains(e.target) && !toggle.contains(e.target)) {
        nav.classList.remove('visible');
      }
    });

    setTimeout(() => {
      const flashMessages = document.querySelectorAll('.flash');
      flashMessages.forEach(msg => msg.style.display = 'none');
    }, 3000);

    function reloadDashboard() {
      location.reload(); // reloads full dashboard with task form
      }

  </script>
</body>
</html>
