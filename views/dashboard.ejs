<!DOCTYPE html>
<html>
<head>
  <title>Dashboard â€“ StudySync</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="page-wrapper">
    <div class="left-panel">
      <h2>Welcome Back, Scholar!</h2>
      <p>Small steps every day lead to big success.</p>
    </div>

    <div class="right-panel">
      <h2>Your Tasks</h2>

      <% if (success && success.length > 0) { %>
        <p class="flash success"><%= success %></p>
      <% } %>
      <% if (error && error.length > 0) { %>
        <p class="flash error"><%= error %></p>
      <% } %>

      <form method="POST" action="/tasks">
        <label for="title">New Task</label>
        <input type="text" id="title" name="title" placeholder="Add new task" required>
        <button type="submit">â• Add Task</button>
      </form>

      <ul class="task-list">
        <% if (tasks.length === 0) { %>
          <li class="empty">No tasks yet. Add one above!</li>
        <% } else { %>
          <% tasks.forEach(task => { %>
            <li>
              <span><%= task.title %></span>
              <form method="POST" action="/tasks/delete/<%= task._id %>">
                <button type="submit" title="Delete Task">ğŸ—‘ï¸</button>
              </form>
            </li>
          <% }) %>
        <% } %>
      </ul>

      <p class="auth-box"><a href="/logout">Logout</a></p>
    </div>
  </div>
</body>
</html>